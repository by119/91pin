page-after-detail {
    .scroll-content {
        padding-bottom: 3rem!important;
    }
    .list-content {
        padding: 1rem;
        background-color: #fff;
        .item-ios {
            border-bottom: none;
        }
        p {
            margin: 0;
        }
        .list-img {
            width: 35%;
            vertical-align: middle;
        }
        .list-detail {
            width: 60%;
            float: right;
            ion-label {
                overflow: hidden;
                white-space:initial;
            }
            p{
                font-size: 1.4rem;
                overflow: hidden;
                text-overflow: ellipsis;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
            }
            .list-price {
                color: #FE5261;
                span {
                    font-size: 1rem;
                }
            }
            ion-note{
                font-size: 1rem;
            }
        }
    }
    .tip {
        margin:1rem 0;
        background-color: #fff;
        padding: 1rem;
        font-size: 1.4rem;
        color: #777;
        span {
            color: #FE5261;
            margin: 0 .2rem;
        }
        p {
            font-size: 1.3rem;
            color: #777;
            margin: 0;
        }
        // 服务类型
        .after-type {
            width: 20%;
            margin-top: 1rem;
            font-size: 1.4rem;
            color: #ec5151;
            padding: .6rem .3rem;
            text-align: center;
            border: 1px solid #ec5151;
            border-radius: 4px;
        }
        // 退款原因
        .select-cause {
            select {
                margin-top: 0.5rem;
                display: block;
                width: 100%;
                height: 34px;
                padding: 6px 12px;
                font-size: 14px;
                line-height: 1.42857143;
                color: #555;
                background-color: #fff;
                background-image: none;
                border: 1px solid #ccc;
                border-radius: 4px;
                -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
                box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
                -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
                -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
                transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            }
        }
        // 退款问题描述
        ion-textarea {
            margin-top: .8rem;
            textarea {
                margin: 0;
                width: 100%;
                height: 12rem!important;
                font-size: 1.5rem;
            }
        }

        .proof{
            font-size: 1.6rem;
            line-height: 3rem;
            padding:0 5%!important;
            color: #333;
            position: relative;
            ion-icon {
                position: absolute;
                right: 0;
                top: 50%;
                transform: translateY(-50%);
            }
        }
        .photos {
            padding-bottom: 0 !important;
            .label {
              overflow: visible;
            }
            //display: flex;
            //flex-wrap: wrap;
            background-color: #fff;
            .photo {
                position: relative;
                border-radius: 0.5rem;
                border: 2px dashed lightgray;
                background-color: #fff;
                width: 5rem;
                height: auto;
                margin: 0 .5rem 1.8rem 0;
                &:before {
                    content: '';
                    display: block;
                    padding-top: 100%;
                }
              .photo-body {
                width: 100%;
                height: 100%;
              }
              .img-container{
                width:100%;
                height:100%;
                overflow: hidden;
                z-index: 1;
              }
              img {
                width: 100%;
                height: auto;
              }
              .close {
                position: absolute;
                text-align: center;
                display: block;
                z-index: 2;
                // line-height: $closeWidth;
                // font-size: $closeWidth*0.9;
                // top: -$closeWidth/2;
                // right: -$closeWidth/2;
                // width: $closeWidth;
                // height: $closeWidth;
                border-radius: 50%;
                border: 1px solid gray;
                //background-color:#F0EFF5;
                background-color: #FFF;
                color: gray;
              }
              .close:before {
                content: '';
                display: block;
                position: absolute;
                height: 0.2rem;
                // width: $closeWidth*0.64;
                // margin-left: -$closeWidth*0.32;
                margin-top: -0.1rem;
                top: 50%;
                left: 50%;
                background: gray;
                transform: rotate(45deg);
              }
              .close:after {
                content: '';
                display: block;
                position: absolute;
                height: 0.2rem;
                // width: $closeWidth*0.64;
                // margin-left: -$closeWidth*0.32;
                margin-top: -0.1rem;
                top: 50%;
                left: 50%;
                background: gray;
                transform: rotate(-45deg);
              }
            }
            .upload {
              display: flex;
              flex-direction: column;
              align-items: center;
              justify-content: center;
              font-size: 5rem;
              color: #AEAEAE;
              form {
                display: none;
              }
            }
          }
        
    }
    .sub-btn {
        position: fixed;
        bottom: 0;
        width: 100%;
        font-size: 1.6rem;
        line-height: 3rem;
        background-color: #ec5151;
        color: #fff;
        text-align: center;
    }
}
