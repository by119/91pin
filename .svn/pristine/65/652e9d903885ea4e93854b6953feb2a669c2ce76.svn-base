    }
    // 商品 规格 参数 
    .parameter {
        background-color: #fff;
        .para-cont {
            font-size:1.4rem;
            color:#777;
            border-left:1px solid #eee;
            border-top:1px solid #eee;
            background:#fff;
            display: flex;
            .para {
                flex: 2;
                display: inline-block;
                border-right:1px solid #eee;
                padding:.5rem;
                text-align:center;
            }
            .para-name {
                // width:10rem;
