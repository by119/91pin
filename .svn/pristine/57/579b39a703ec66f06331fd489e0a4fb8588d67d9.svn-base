page-order {
    .order-list {
        margin-top: .5rem;
        .list-title {
            line-height: 3rem;
            font-size: 1.6rem;
            background-color: #fff;
            border-bottom: 1px solid #e3e5e9;
            padding: 0 .5rem;
            span {
                width: 50%;
                display: inline-block;
                overflow: hidden;
                white-space: nowrap;
                text-overflow: ellipsis;
                vertical-align: middle;
            }
            .list-state {
                color: #ec5151;
                float: right;
                font-size: 1.4rem;
                text-align: right;
            }
        }
        .list-data {
            background-color: #fff;
            padding: .5rem;
            p {
                margin: 0;
                color: #c6c6c6;
                line-height: 1.6rem;
                font-size: 1.4rem;
            }
            .order-num {
                font-size: 1.2rem;
                span {
                    font-size: 1.6rem;
                    color: #333;
                }
                i {
                    font-size: 1rem;
                    line-height: 1.4rem;
                    color: #fff;
                    background-color: #ec5151;
                    font-style: initial;
                    border-radius: 1rem;
                    padding: 0 .3rem;
                }
            }
        }
        .list-style{
            padding: 1rem;
            position: relative;
            img {
                width: 30%;
                float: left;
            }
            p {
                width: 50%;
                float: left;
                padding: 0 .5rem;
                overflow: hidden;
                text-overflow: ellipsis;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                color: #333;
            }
            .list-num{
                position: absolute;
                top: 50%;
                right: 0;
                transform: translateY(-50%);
                width: 20%;
                float: right;
                text-align: center;
                color: #898989;
                span {
                    width: 10%;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    vertical-align: middle;
                }
            }
        }
        .list-deal {
            background-color: #fff;
            padding: .5rem;
            text-align: right;
            span {
                display: inline-block;
                // float: right;
                border: 1px solid #DEE2E3;
                padding: 0 .5rem;
                line-height: 1.8rem;
                font-size: 1.6rem;
                border-radius: .5rem;
                margin-left: .3rem;
            }
            .pay {
                color: #ec5151;
                border:  1px solid #ec5151;
            }
            .list-total{
                float: left;
                text-align: left;
                font-size: 1.4rem;
                margin: 0;
                span {
                    border:none;
                    color: #ec5151;
                    font-size: 1.6rem;
                }
            }
            .cancel {

            }
        }
    }
    
    .assess-list {
        padding: 1rem;
        background-color: #fff;
        margin-top: .5rem;
        position: relative;
        img {
            width: 25%;
            float: left;
            border: 1px solid #f6f6f9;
            margin-right: .8rem;
        }
        .list-info {
            width: 70%;
            float: left;
            .list-title {
                font-size: 1.6rem;
                overflow : hidden;
                text-overflow: ellipsis;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                margin: 0;
            }
            .group-num {
                font-size: 1.3rem;
                color: #777;
                margin: .2rem 0 0 0;
            }
            .list-buy {
                .list-price {
                    float: left;
                    color: #ec5151;
                    font-size: 1.8rem;
                    line-height: 2.6rem;
                }
                .list-btn {
                    position: absolute;
                    right: 1rem;
                    bottom: 1rem;
                    font-size: 1.5rem;
                    border: 1px solid #ec5151;
                    border-radius: .3rem;
                    text-align: center;
                    line-height: 2rem;
                    padding: 0 .5rem;
                    color: #ec5151;
                }
            }
        }
    }
    .order-dialog {
        position: fixed;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        .dialog-bg {
            position: fixed;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            background-color: rgba(0,0,0,0.4);
        }
        .dialog {
            position: absolute;
            top: 0;
            padding: 1rem;
            margin-top: 6.2rem;
            background-color: #F0F1F5;
            width: 100%;
            div {
                line-height: 2.2rem;
                font-size: 1.6rem;
                background-color: #fff;
                float: left;
                padding: 0 .8rem;
                border-radius: 2rem;
                margin-right: .5rem;
                ion-icon {
                    color: #ec5151;
                }
                span {
                }
            }
        }
    }
}
