.card-ios  {
    width: 100%;
    margin: 0;
}

ion-card {
    position: relative;
    text-align: center;
}

ion-card-content {
    position: absolute;
    top: 36%;
    font-size: 2.0em;
    width: 100%;
    font-weight: bold;
    color: #fff;
}
ion-avatar {
    width: 5rem;
    height:5rem;
    float: left;
}
.avatar {
    width: 5rem;
    height:5rem;
    border-radius:100%;
    overflow: hidden;
}

.myhead ion-label {
    float: left;
}
.myhead ion-label h2 {
    line-height: 2rem;
    text-align: left;
    margin-left: .8rem;
}
.my-sign {
    position: absolute;
    top: 25%;
    right: -.5rem;
    border: 1px solid #fff;
    padding: .5rem 1rem;
    line-height: 1rem;
    border-radius: 1.5rem 0 0 1.5rem;
    background: linear-gradient(left,#FF3742,#FF8156)
}

.my-sign span {
    margin: 0 .5rem;
}

.my-order-box {
    width: 100%;
    display: flex;
    border: none!important;
}
.my-order-box .item-ios {
    padding: 0.3rem 0;
    text-align: center;
}
.my-order-item {
    flex: 1;
    text-align: center;
}
ion-badge {
    padding: 0.1rem 0.2rem;
    position: absolute;
    top: -0.1rem;
    right: 0.2rem;
    z-index: 9999;
}
.badge-ios {
    border-radius: 100%;
}
  .mylist {
    margin: 2%;
    width: 96%;
    border-radius: .5rem;
    padding-left:.1rem;
    border-bottom: none!important;
  }
  .item-ios.item-block .item-inner {
    padding-right: .1rem;
    border-bottom: none;
  }
  .item-ios {
    border-bottom: 1px solid #F7F7F7;
  }
  .list-ios {
    margin: 0;
  }
  .label-ios {
    margin: 0;
  }
