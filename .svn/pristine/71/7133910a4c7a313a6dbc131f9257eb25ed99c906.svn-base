page-cart {
        
    ion-app.ios [padding] .scroll-content {
        padding: 0;
        background-color: #F7F7F7;
    }
    ion-icon {
        font-size: 2rem;
        line-height: 3rem;
    }
    .scroll-content {
        padding-bottom: 4rem!important;
    }
    .cart-box {
        margin: 1rem 0;
    }
    .cart-list {
        width: 100%;
        border-bottom: 0;
        background-color: #fff;
        .item-ios {
            border-bottom: none;
        }
    }
    .list-title {
        font-size: 1.6rem;
        line-height: 3rem;
        padding:0 5%!important;
    }
    .list-note {
        font-size: 1.2rem;
        line-height: 3rem;
        padding:0 5%!important;
    }
    .list-content {
        padding: 1rem 5%!important;
        .item-ios {
            border-bottom: none;
        }
        p{
            margin: 0;
        }
        ion-note{
        
        }
    }
    
    .list-img {
        width: 30%;
        vertical-align: middle;
    }
    .list-detail {
        width: 60%;
        float: right;
        ion-note{
            font-size: 1rem;
        }
        ion-label {
            overflow: hidden;
            white-space:initial;
        }
        p {
            font-size: 1.4rem;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }
        .list-price {
            margin-top: .3rem;
            line-height: 2rem;
            color: #FE5261;
            span {
                font-size: 1rem;
            }
        }
        
        .ctrl-del {
            float: right;
            
            .icon-delete {
                // float: right;
                line-height: 2rem;
                margin-left: .5rem;
            }
            
            .ctrl-num {
                color: #333;
                background-color: #fff;
                display: inline-block;
                border: 1px solid #EFEFEF;
                span {
                    width: 2rem;
                    height: 2rem;
                    line-height: 2rem;
                    text-align: center;
                    float: left;
                    vertical-align: middle;
                    background: #fff;
                    font-size: 2rem;
                    cursor: pointer;
                    .reduce {
                        color: #000;
                    }
                    .add {
                        margin-right: .5rem;
                    }
                }
                input {
                    width: 4rem;
                    height: 2rem;
                    line-height: 2rem;
                    display: inline-block;
                    border: none;
                    border-left: 1px solid #EFEFEF;
                    border-right: 1px solid #EFEFEF;
                    outline: none;
                    float: left;
                    text-align: center;
                }
                .grey {
                    background-color: #F7F7F7;
                    color: #DEDFDE;
                }
                
            }
        }
    
    }
    
    // 购物车为空
    .cart-null {
        text-align: center;
        color: #c6c6c6;
        line-height: 10rem;
    }


    // 可能喜欢
    .like-box {
        background-color: #fff;
        padding-bottom: 50px;
    }
    .like-box ion-title{
        line-height: 4rem;
        border-bottom: 1px solid #F7F7F7;
        margin-bottom: 1rem;
    }
    .like-list {
        width: 44%;
        margin: 2% 0;
        float: left;
    }

    .like-list:nth-child(2n+1){
        margin-left: 4%;
    }
    .like-list:nth-child(2n){
        margin-left: 3%;
    }
    .like-list ion-label {
        overflow: hidden;
        white-space:initial;
    }
    .like-list .like-depict {
        color: #333;
        font-size: 1rem;
        line-height: 1.6rem;
        margin: 0;
        overflow : hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }
    .like-list .like-price {
        color: #FE5261;
        line-height: 1.4rem;
        margin: .5rem 0;
    }
    .like-price span {
        font-size: 1rem;
    }

    .may-like .item-ios {
        border-bottom: none;
    }
    // 购物车底部
    .submit {
        position: fixed;
        bottom: 50px;
        width: 100%;
        font-size: 1.6rem;
        background-color: #fff;
        .show-btn {
            width: 60%;
            float: left;
            background-color: #fff;
            p {
                margin: 0;
                padding-left: 1rem;
            }
            p:first-child {
                color: #ec5151;
            }
            p:last-child {
                color: #777;
                font-size: 1rem;
            }
        }
        .pay-btn {
            width:40%;
            float: right;
            color: #fff;
            background-color: #ec5151;
            text-align: center;
            line-height: 3.6rem;
        }
    }
}