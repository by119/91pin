page-order-detail {    
    .scroll-content {
        padding-bottom: 4rem!important;
    }
    .icon-more {
        font-size: 1.4rem;
        color: #888;
    } 
    .addr {
        background: #fff url('../assets/imgs/flow_check_03.png') bottom left repeat-x;
        background-size: 8rem auto;
        font-size: 1.7rem;
        padding-top: 1rem;
        padding-bottom: 1.2rem;
        padding-right: 3rem;
        padding-left: 4rem;
        position: relative;
        .icon-addr {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            left: 2rem;
            font-size: 2.2rem;
            color: #777;
        }
        .addr-info {
            float: left;
            p {
                margin: 0;
                .def-addr {
                    border: 1px solid #ec5151;
                    color: #ec5151;
                    border-radius: 3px;
                    font-size: 1.1rem;
                    padding: 0 .4rem;
                    height: 1.5rem;
                    line-height: 1.4rem;
                    vertical-align: text-top;
                }
            }
        }
        .icon-more {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            right: 1.5rem;
        }
    }
    .shop {
        margin-top: .5rem;
        padding: .5rem 1rem;
        background: #fff;
        border-top:1rpx solid #eee;
        border-bottom:1rpx solid #eee;
        font-size: 1.6rem;
        div {
            font-size: 1.6rem;
            padding: .5rem;
            border-bottom: 1px solid #eee;
            margin-bottom: 1rem;
            span {
                color: #ec5151;
                float: right;
                font-size: 1.2rem;
            }
        }
        p {
            color: #999;
            font-size: 1.3rem;
            line-height: 1.6rem;
            font-weight: 400;
            margin: 0;
            span {
                color: #444;
                font-size: 1.5rem;
            }
        }
    }
    .goods {
        padding: 1.3rem;
        background-color: #fff;
        border-bottom: 1px solid #f6f6f9;
        img {
            width: 30%;
        }
        .goods-info {
            width: 70%;
            float: right;
            padding-left: .4rem;
            p {
                margin: 0;
            }
            .goods-title {
                font-size: 1.5rem;
                line-height: 1.7rem;
                overflow: hidden;
                text-overflow: ellipsis;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;   
            }
            .goods-price {
                font-size: 1.5rem;
                line-height: 1.7rem;
                color: #ec5151;
            }
            .goods-pro {
                overflow: hidden;
                text-overflow: ellipsis;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;  
                span {
                    color: #999;
                    font-size: 1.3rem;
                    margin-right: .4rem;
                }
            }
        }
    }
    // 配送方式
    .logistics{
        width: 100%;
        padding: 1rem;
        font-size: 1.4rem;
        background-color: #fff;
        border-top: 1px solid #f6f6f9;
        border-bottom: 1px solid #f6f6f9;
        ion-label {
            color: #777;
        }
    }
    .goods-total {
        text-align: right;
        padding: 0 1rem;
        line-height: 2.6rem;
        background-color: #fff;
        color: #999;
        font-size: 1.5rem;
    }
    .total {
        background-color: #fff;
        // padding: 1rem 0;
        margin: .5rem 0;
        p {
            padding: 0 1rem;;
            font-size: 1.4rem;
            line-height: 2.6rem;
            border-bottom:1px solid #eee;
            margin: 0;
            span {
                float: right;
                color: #ec5151
            }
        }
    }
    // 支付方式
    .payment {

    }
    // 提交订单
    .submit {
        position: fixed;
        bottom: 0;
        width: 100%;
        font-size: 1.6rem;
        line-height: 3rem;
        background-color: #fff;
        span {
            color: #777777;
            padding-left: 1rem;
        }
        .del-btn {
            width: 50%;
            float: left;
            color: #ec5151;
            background-color: #fff;
            text-align: center;
        }
        .pay-btn {
            width:50%;
            float: right;
            color: #fff;
            background-color: #ec5151;
            text-align: center;
        }
        .sub-btn {
            width:100%;
            float: right;
            color: #fff;
            background-color: #ec5151;
            text-align: center;
        }
    }
}

.alert-ios .alert-button {
    color: #000;
}
.alert-ios .alert-button:last-child{
    font-weight: normal;
    color: #44C729;
}